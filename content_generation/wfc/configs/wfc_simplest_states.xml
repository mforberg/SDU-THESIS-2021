<?xml version="1.0" encoding="utf-8" ?>
<wfc_states>
    <states>
        <state name="wall_upper" weight="40"/>
        <state name="wall_bottom" weight="40"/>
        <state name="road" weight="80"/>
    </states>

    <neighbors>

        <!-- Walls -->
        <parent name="wall_upper">
            <neighbor name="wall_bottom" legal="D" required="True"/>
            <neighbor name="road" legal="LRU" required="False"/>
        </parent>
        <parent name="wall_bottom">
            <neighbor name="wall_upper" legal="U" required="True"/>
            <neighbor name="road" legal="LRD" required="False"/>
        </parent>

        <!-- Road -->
        <parent name="road">
            <neighbor name="wall_upper" legal="D" required="True"/>
            <neighbor name="wall_bottom" legal="U" required="True"/>
            <neighbor name="road" legal="LRDU" required="False"/>
        </parent>
    </neighbors>
</wfc_states>

